<%= content_for :breadcrumbs do %>
      <ul class="breadcrumb">
        <li>Manage <span class="divider">/</span></li>
        <li class="active">Employees</li>
      </ul>
<% end %>
<%= content_for :search_box do %>
      <%= form_for( @search, :url => employee_infos_path ) do |f| %>
      <%= f.select :company_id_eq, Company.all.map { |c| [c.short_name, c.id] }.insert(0, ['All Company', nil]), {}, :class => 'data-field', :onchange => 'this.form.submit()'  %>
      <%= f.select :status_eq, [['All Status', nil],['active', 1], ['leaved', 0]],{}, :class => 'data-field', :onchange => 'this.form.submit()' %>
    <div class='input-prepend input-append'>
      <span class='add-on'>Name</span>
      <%= f.text_field :nickname_contains %>
      <%= search_button %>
    <%= link_to_new 'Add Employee', new_employee_info_path %>
    </div>
      <% end %>
<% end %>
<section>
<%= will_paginate(@collection) %>
<table class="data-list table table-bordered table-striped" id="list_employee_infos">
  <thead>
  <tr class='table-header'>
      <th><%= t("id") %></th>
      <th><%= t("Company") %></th>
      <th><%= t("name") %></th>
      <th><%= t("roles") %></th>
      <th>Login</th>
      <th>Employ Date</th>
      <th>SSN</th>
      <th>Login count</th>
      <th><%= t('status') %></th>
      <th>op</th>
  </tr>
  </thead>
  <tbody>
<% @collection.each do |e| %>
  <%= render :partial => 'row_doc', :object => e %>
<% end %>
  </tbody>
</table>
<%= will_paginate(@collection) %>
</section>
