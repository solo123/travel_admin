- tt = TypeText.instance

%tr{id: "#{dom_id row}", class: '#{class_if_deleted(row)}'}
  %td= row.company.short_name if row.company
  %td= row.id
  %td= row.employee.login_name if row.employee
  %td= row.nickname
  %td= tt.get_texts('roles', row.roles)
  %td= row.telephone
  %td= row.email
  %td= row.status
  %td.actions
    .btn-group
      = row_link_to_edit row
      = link_to raw('<i class="fa fa-pencil"></i>'), edit_info_employee_info_path(row), remote: true, class: 'btn btn-info'
      = row_link_to_photo employee_info_photos_path(row)
