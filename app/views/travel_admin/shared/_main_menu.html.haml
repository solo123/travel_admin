.navbar.navbar-static.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      = link_to 'Admin Home', cfg.get_config('admin_path'), :class => 'navbar-brand'
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            Data
            %b.caret
          %ul.dropdown-menu{:role => "menu"}
            %li= link_to t(:destinations), destinations_path
            %li= link_to t(:tours), tours_path
            %li= link_to t(:schedules), schedules_path
            %li.divider
            %li= link_to t(:vehicles), buses_path
            %li= link_to t(:pages), pages_path
            %li.divider
            %li= link_to t(:companies), companies_path
            %li= link_to 'Employees', employee_infos_path
        - if has_auth('process_order')
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Orders
              %b.caret
            %ul.dropdown-menu
              %li= link_to t(:orders), orders_path
              %li= link_to t(:credit_cards), pay_credit_cards_path
              %li.divider
              %li= link_to t(:user_infos), user_infos_path
              %li= link_to t(:emails), emails_path
              %li= link_to t(:telephones), telephones_path
              %li= link_to t(:addresses), addresses_path
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Accounts
              %b.caret
            %ul.dropdown-menu
              %li= link_to t(:accounts), accounts_path
              %li= link_to t(:payments), payments_path
              %li= link_to t(:vouchers), vouchers_path
              %li= link_to t(:company_receivables), company_receivables_path
              %li= link_to t(:schedule_balances), schedule_assignment_balances_path
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Reports
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Vehicles shifts', shifts_buses_path
              %li= link_to 'Employees shifts', shifts_employee_infos_path
          - if has_auth('show_manage_menu')
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Manage
                %b.caret
              %ul.dropdown-menu
                %li= link_to t(:employees), docs_employee_infos_path
                %li.dropdown-submenu
                  %a{:href => "#"} Data Types
                  %ul.dropdown-menu
                    %li= link_to t(:input_types), input_types_path
                    %li= link_to t(:configurations), app_configurations_path
          - if has_auth('is_admin')
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Admin
                %b.caret
              %ul.dropdown-menu
                %li= link_to 'Reset schedules data', 'admin/reset_schedules'
                %li= link_to 'Auto fill user payment name', 'admin/autofill_pname'
      = render 'travel_admin/shared/login_indicator'
