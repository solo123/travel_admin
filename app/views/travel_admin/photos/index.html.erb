<%= content_for :breadcrumbs do %>
  Data &gt;
  <%= link_to @parent.class.name.pluralize.humanize, objects_url(@parent) %> &gt;
  Photos
<% end %>

<%= render :partial => objects_path(@parent) + '/detail', :object => @parent %>

<div id='upload_div' class='dialog-normal'></div>
<div style='clear:both;margin-top:10px;'> 
<%= button_link_to 'Add Photo', object_url(@parent) + '/photos/new', {:icon => 'add', :remote => true} %>
</div>
<div class='thumbs'>
  <% @collection.each do |p| %>
    <div class='thumb'>
      <a href='<%= p.pic.url(:large) %>'><%= image_tag p.pic.url(:thumb) %></a>
      <div class='buttons'>
        <%= icon_link_to '', "#{object_url(@parent)}/photos/#{p.id}/cover", {:icon => 'accept'} %> 
        <%= icon_link_to '', "#{object_url(@parent)}/photos/#{p.id}", {:icon => 'delete', 'data-confirm' => 'Are you sure to Delete this photo?', 'data-method' => 'delete'} %> 
     </div>
    </div>
  <% end %>
  <div class='clear'></div>
</div>
