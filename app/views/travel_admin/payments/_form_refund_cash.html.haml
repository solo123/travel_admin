- refund = PayCash.new
= form_for( refund, :remote => true) do |f|
  = hidden_field_tag :order_id, params[:order_id]
  %table.compact
    %tr
      %td Pay:
      %td
        %input#recv_cash.large-amount{:type => "text", :value => "0.00"}/
      %td
        Change:
        %label#pay_cash_change.pay-amount 0.00
        = f.hidden_field :amount
    %tr
      %td Received by:
      %td
        = render :partial => 'travel_admin/shared/select_employee', :locals => {:f => f, :field_name => :received_by_id , :role => '5'}
      %td
  %p
    = f.submit 'refund'
