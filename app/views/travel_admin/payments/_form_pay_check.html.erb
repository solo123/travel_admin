<% 
  pay_check = PayCheck.new
%>
<%= form_for( pay_check, :remote => true) do |f| %>
  <%= hidden_field_tag :order_id, params[:order_id] %>
  <table class='compact'>
    <tr>
      <td>Amount:</td>
      <td><%= f.text_field :amount %></td>
    </tr>
    <tr>
      <td>Check number:</td>
      <td><%= f.text_field :check_number %></td>
    </tr>
    <tr>
      <td>Cash received by:</td>
      <td>
        <%= render :partial => 'travel_admin/shared/select_employee', :locals => {:f => f, :field_name => :received_by_id , :role => '5'} %>
      </td>
    </tr>
  </table>
  <p>
    <%= f.submit %>
  </p>
<% end %>

