%h1
  Todo:&nbsp;&nbsp;
  \#{link_to_function image_tag('admin/refresh.png', :size => '10x10'), 'load_todos()', :class => 'hot-link'}
  \#{link_to image_tag('admin/add.gif'), todos_path+'/new', :class => 'hot-link', :remote => true}
%table.compact
  - @collection.each do |o|
    %tr
      %td= o.level
      %td= link_to o.message, todo_path(o), :remote => true
      %td= o.employee_info_id
      %td= o.due_date
      %td.note-text
        %time.timeago{:datetime => o.created_at.iso8601}= o.created_at
