<% if flash[:error] %>
  alert("<%= flash[:error] %>");
  <% flash.discard %>
<% else %>
<%
  class_name = @object.class.name.underscore.pluralize 
%>
  $("#list_<%= class_name %>")
    .append("<%=j render(:partial => 'row', :object => @object) %>");

  if ($('#list_<%= class_name %>').length == 0){
	  alert("[<%= class_name %>] Add 1 new <%= @object.class.name %> data.");
  }

  $("#edit_<%= @object.class.name.underscore %>_div").modal('hide');
<% end %>
