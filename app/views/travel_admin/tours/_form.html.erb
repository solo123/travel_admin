<%
  @object.build_description if @object.new_record?
%>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3 id="myModalLabel">Edit Tour# <%= @object.id %></h3>
</div>
<div class="modal-body">

<%= form_for( @object, :remote => true) do |f| %>

<div class="tabbable">
  <ul class="nav nav-tabs">
	<li class='active'><a href="#tab1" data-toggle='tab'>Description</a></li>
	<li><a href="#tab2" data-toggle='tab'>Attributes</a></li>
	<li><a href="#tab3" data-toggle='tab'>Prices</a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <%= render :partial => 'travel_admin/shared/description', :locals => {:f => f} %>
<%= render :partial => 'travel_admin/shared/status', :locals => {:f => f} %>	
    </div>
    <div class="tab-pane" id="tab2">
    <div class="row">
      <div class='span3'>
        <%= f.label :tour_type %>
        <%= f.select :tour_type, InputType.get_list('tour').map{|t| [t.type_text, t.type_value]}, {}, :class => 'data-field' %>
      </div>
      <div class='span3'>
          <%= f.label :days %>
          <%= f.text_field :days %>
      </div>
    </div>
    <%= render :partial => 'tour_setting', :locals => {:f => f} %>
    </div>

    <div class='tab-pane' id='tab3'>
    <%= render :partial => 'tour_price', :locals => {:f => f} %>
    </div>
  </div>
</div>

<% end %>


</div>
<div class="modal-footer">
  <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  <button class="btn btn-primary" onclick='submit_dialog_form(this)'>Save changes</button>
</div>



