%section
  %div{id: dom_id(row), class: ((!row.status || row.status < 1) ? 'deleted' : ''),  status: row.status}
    .well
      .color-title
        Day #{row.visit_day}:
        \#{row.visit_order})
        \#{"#{row.destination.description.title}, #{row.destination.description.title_cn}" if row.destination}
        .btn-group
          = icon_link_to '',"spots/#{row.id}", :remote => true, :icon => 'fa fa-check-square-o', :title => "Use this destination's thumb as spot's icon"
          = icon_link_to '', "spots/#{row.id}/edit", :remote => true, :icon => 'fa fa-edit', :title => 'Edit'
          = icon_link_to '', "spots/#{row.id}", :remote => true, :method => :delete, :confirm => 'Are you sure to delete this spot?', :icon => 'fa fa-trash-o', :title => 'Show/Hide this spot from website'
      .row
        .span4
          = cl_image_tag(row.destination.title_photo.public_id, width:50, height: 50, crop: :fill) if row.destination && row.destination.title_photo
        - if row.description
          .span4
            = raw row.description.en
          .span4
            = raw row.description.cn
