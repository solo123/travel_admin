%tr{id: "#{dom_id row}", class: "#{(!row.status || row.status < 1) ? 'deleted' : ''}"}
  %td.cell-middle= row.id
  %td.cell-middle= image_tag(row.title_photo.pic.url(:thumb), :size => '40x40' ) if row.title_photo
  %td
    %span.text-success
      [#{row.tour_type_name}]
    (
    %span.text-warning
      = row.days
      days
    )
    %span.text-info
      Weekly: #{row.tour_setting.weekly if row.tour_setting}
    %br/
    = row.description.title
    %br/
    %span.text-success= row.description.title_cn
  %td
    = row.tour_price.price_adult
    %br/
    %small
      %i.icon-user{:title => "Single charge"}
      = row.tour_price.single_charge
      %br/
      %i.icon-th-large{:title => "The forth charge"}
      = row.tour_price.forth_charge
      %br/
      - if row.tour_price.buy_two_get_one_free == 1
        %abbr.initialism.text-success{:title => "Buy 2 get 1 free"} B2G1F
  %td= row.tour_setting.weekly
  %td.cell-middle
    .btn-group.btn-group-sm
      = website_link_to_view row
      = icon_link_to '', tour_spots_path(row), :icon => 'icon-list', :title => 'Tour route and visit schedule'
      = row_link_to_edit row
      = icon_link_to '', new_tour_schedule_path(row), :icon => 'icon-plus', :title => 'Add 1 schedule to this tour.', :remote => true
      = row_link_to_hide row
