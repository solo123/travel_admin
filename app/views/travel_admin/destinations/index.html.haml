= content_for :breadcrumbs do
  %ul.breadcrumb
    %li
      Data
      %span.divider /
    %li.active Destinations
= content_for :search_box do
  = form_for( @search, :url => destinations_path ) do |f|
    .input-prepend.input-append
      %span.add-on Title
      = search_button
      = link_to_new 'New Destination', 'destinations/new'
%section
  = will_paginate(@collection)
  %table#list_destinations.data-list.table.table-bordered.table-striped
    %thead
      %tr.table-header
        %th ID
        %th{:width => "50"} Photo
        %th Title
        %th= t("city")
        %th= t("status")
        %th{:width => "160"} operate
    %tbody
      - @collection.each do |d|
        = render :partial => 'row', :object => d
  = will_paginate(@collection)
