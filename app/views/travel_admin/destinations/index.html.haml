= content_for :breadcrumbs do
  %li Data
  %li.active Destinations

%h1.page-header
  Destinations
  %small all destinations list here for edit.

%section

  .panel.panel-inverse
    .panel-heading
      .btn-group.pull-right
        = link_to_new 'New', new_destination_path
      %h4.panel-title Destinations
    .panel-body
      = will_paginate(@collection)
      %table#list_destinations.data-list.table.table-hover.table-striped
        %thead
          %tr.table-header
            %th ID
            %th{:width => "50"} Photo
            %th Title
            %th= t("city")
            %th= t("status")
            %th{:width => "160"} operate
        %tbody
          - @collection.each do |d|
            = render :partial => 'row', :object => d
      = will_paginate(@collection)

