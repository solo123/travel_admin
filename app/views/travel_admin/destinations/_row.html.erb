<% c = row.city %>
<tr id="<%= dom_id row%>" <%= 'class=deleted' if !row.status || row.status < 1 %>>
  <td class='cell-middle'><%= row.id %></td>
  <td><%= image_tag(row.title_photo.pic.url(:thumb), :size => '40x40' ) if row.title_photo %></td>
  <td><%= row.description.title %><br />
      <%= row.description.title_cn %></td>
  <td><%= "#{c.city}, #{c.state}, #{c.country}" if c %></td>
  <td class='cell-middle'><%= row.status_text %></td>
  <td>
    <div class='btn-group'>
      <%= website_link_to_view row %> 
      <%= row_link_to_edit row %> 
      <%= row_link_to_photo destination_photos_path(row) %> 
      <%= row_link_to_hide row %>
    </div>
  </td>
</tr>
