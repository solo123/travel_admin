= icon_link_remote 'copy', 'Add Items', edit_shop_order_path(@shop_order) + '?p=add_item'
- if @shop_order.items.count > 0
  %table
    %tr
      %th Room (adult/child)
      %th Amount
      %th remark
      %th Created at
    - @shop_order.items.each do |item|
      %tr
        %td
          = item.room_number
          (#{item.num_adult}/#{item.num_child})
        %td= item.amount
        %td= item.remark
        %td= item.created_at
- if @shop_order.price
  %div
    %p
      %b Price:
      Rooms: #{@shop_order.price.num_rooms}
      Adult: #{@shop_order.price.num_adult}
      Child: #{@shop_order.price.num_child}
      Amount: #{@shop_order.price.total_amount}
