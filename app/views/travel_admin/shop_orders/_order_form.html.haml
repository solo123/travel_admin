= form_for( @shop_order, :url => shop_order_path(@shop_order), :remote => true) do |f|
  %p
    Order: #{@shop_order.id}
  = f.fields_for :items do |item|
    %p
      Room #:
      Adult: #{item.text_field :num_adult, :size => 2}
      Child: #{item.text_field :num_child, :size => 2}
      - unless item.object.new_record?
        = item.check_box :_destroy
        = item.label :_destroy, 'Remove'
  .actions
    = f.submit
