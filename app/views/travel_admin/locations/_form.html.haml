= form_for(@location, :remote => true) do |f|
  %div
    = f.field_container :abbr do
      = f.label :abbr
      %br/
      = f.text_field :abbr
  .yui-g
    .yui-u.first
      = f.field_container :title do
        = f.label :title
        %br/
        = f.text_field :title
    .yui-u
      = f.field_container :title_cn do
        = f.label :title_cn
        %br/
        = f.text_field :title_cn
  .actions
    = f.submit
