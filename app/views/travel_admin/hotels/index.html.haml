= render :partial => 'travel_admin/shared/product_sub_menu'
.toolbar
  %ul.actions
    %li#new_photo_link
      = button_link_to t("new_photo"), new_object_url, {:remote => true, :icon => 'add', :id => 'admin_new_photo'}
  %br.clear/
%h1= "#{t("actions.listing")} #{t("photos")}"
#new_photo
%table#listing_photos.index
  %tr
    %th= t("sku")
    %th= t("abc")
    %th= t("ddd")
    %th
  - @collection.each do |p|
    %tr{:id => dom_id p}
      %td= p.id
      %td= p.title
      %td.actions
        = link_to_edit p, :class => 'edit'
        \&nbsp;
        \#{link_to_clone p, :class => 'clone'}
        \&nbsp;
        \#{link_to_delete p}
= will_paginate(:previous_label => "&#171; #{t('previous')}", :next_label => "#{t('next')} &#187;")
- content_for :sidebar do
  = form_for [:admin, @search] do |f|
    .box
      %h3= t(:search)
      %p.form-buttons
        = button t("search")
