= content_for :breadcrumbs do
  %ul.breadcrumb
    %li
      Orders
      %span.divider /
    %li.active Users
= content_for :search_box do
  = form_for( @search, :url => user_infos_path ) do |f|
    .input-prepend.input-append
      = f.text_field :full_name_contains, :size => 15, :class => 'data-field'
      = search_button
      = link_to_new 'New user', 'user_infos/new'
%section
  = will_paginate(@collection)
  %table#list_user_infos.data-list.table.table-bordered.table-striped
    %thead
      %tr.table-header
        %th= t("id")
        %th= t("full_name")
        %th= t("user_type")
        %th= t('status')
        %th= t('created_at')
        %th= t('updated_at')
        %th op
    %tbody
      - @collection.each do |obj|
        = render :partial => 'row', :object => obj
  = will_paginate(@collection)
