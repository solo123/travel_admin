var edit_div_id = "edit_schedule_assignment_div";
var edit_div = '#' + edit_div_id;
if ($(edit_div).length == 0){
  $('#page_main').append("<div id='"+ edit_div_id +"'></div>");
  $(edit_div).dialog({ autoOpen:false, width:700, dialogClass:'shadow', modal:true});
}

$(edit_div)
	.html("<%= j render 'form' %>")
	.dialog('option', 'title', '* New Schedule Assignment *')
	.dialog('open');

var driver_list = <%=raw @object.valid_employee('2').collect{|e| [e.nickname, e.id]} %>;
var tourguide_list = <%=raw @object.valid_employee('3').collect{|e| [e.nickname, e.id]} %>;

bind_driver_selection();
bind_tourguide_selection();

$('.html-editor').xheditor({tools: 'Blocktag,Bold,Italic,Underline,|,List,Link,Img,|,Source'});		
$('input[type=submit]').addClass('button green');
$('.date-picker').datepicker({ showButtonPanel: true, dateFormat: 'yy-mm-dd' });

