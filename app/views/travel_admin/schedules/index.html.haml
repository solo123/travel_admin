= content_for :breadcrumbs do
  %ul.breadcrumb
    %li
      Data
      %span.divider /
    %li.active Schedules
= content_for :search_box do
  = form_for(@search, :url => schedules_path) do |f|
    .input-prepend.input-append
      %span.add-on From
      = f.text_field :departure_date_greater_than_or_equal_to, :class => 'span2 date-picker'
      %span.add-on To
      = f.text_field :departure_date_less_than_or_equal_to, :class => 'span2 date-picker'
      = search_button
%section
  %ul#list_emps.nav.nav-tabs
    - type_text.get_types('tour').each do |t|
      <li #{"class=active" if t.type_value.to_i == @tt.to_i}>
      \#{link_to t.type_text, schedules_path(:tour_type => t.type_value)}
  = will_paginate(@collection)
  %table#list_schedules.data-list.table.table-bordered.table-striped
    %thead
      %tr.table-header
        %th= t("schedule_id")
        %th= t("tour")
        %th= t("days")
        %th Price
        %th Departure / Return
        %th Status
    %tbody
      - @collection.each do |s|
        = render :partial => 'row', :object => s
  = will_paginate(@collection)
