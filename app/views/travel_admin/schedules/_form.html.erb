<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3 id="myModalLabel">Edit Schedule# <%= @object.id %></h3>
</div>
<div class="modal-body">
  <%= form_for( @object, :remote => true) do |f| %>
    <%= f.fields_for :price do |fp| %>
      <div class="row">
        <div class='span4'>
          <div>
            <%= fp.label :price_adult %>
            <%= fp.text_field :price_adult %>
          </div>
          <div>
            <%= fp.label :price_child %>
            <%= fp.text_field :price_child %>
          </div>
        </div>
        <div class='span4'>
          <div>
            <%= fp.label :price1 %>
            <%= fp.text_field :price1 %>
          </div>
          <div>
            <%= fp.label :price2 %>
            <%= fp.text_field :price2 %>
          </div>
          <div>
            <%= fp.label :price3 %>
            <%= fp.text_field :price3 %>
          </div>	  

          <div>
            <%= fp.label :price4 %>
            <%= fp.text_field :price4 %>
          </div>	  
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<div class="modal-footer">
  <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  <button class="btn btn-primary" onclick='submit_dialog_form(this)'>Save changes</button>
</div>


