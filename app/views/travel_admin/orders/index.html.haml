= content_for :breadcrumbs do
  %ul.breadcrumb
    %li
      Orders
      %span.divider /
    %li.active All Orders
= content_for :search_box do
  = search_form_for( @q, class: 'form-inline' ) do |f|
    .col-md-4
      .input-group
        = f.text_field :order_number_cont, :class => 'form-control', placeholder: 'Search by Order#'
        .input-group-btn
          = search_button

%section
  = will_paginate @collection
  %table#list_orders.data-list.table.table-bordered.table-striped
    %thead
      %tr.table-header
        %th Order number
        %th Customer
        %th Order type
        %th Created
        %th State
        %th op
    %tbody
      - @collection.each do |order|
        = render :partial => 'row', :object => order
  = will_paginate @collection


